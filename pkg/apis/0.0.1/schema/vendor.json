{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The OCF Vendor manifest schema",
  "description": "Remote OCH repositories can be mounted under the vendor sub-tree in the local repository. OCF Vendor manifest stores connection details of the external OCH, such as URI of the repository (base path) or federation strategy.",
  "required": [
    "metadata",
    "spec"
  ],
  "allOf": [
    {
      "$ref": "file://pkg/apis/0.0.1/schema/common/root-fields.json"
    },
    {
      "properties": {
        "metadata": {
          "$ref": "file://pkg/apis/0.0.1/schema/common/metadata.json"
        },
        "spec": {
          "$id": "#/properties/spec",
          "type": "object",
          "title": "The spec schema",
          "description": "A container for the Vendor specification definition.",
          "additionalProperties": false,
          "required": [
            "federation"
          ],
          "properties": {
            "federation": {
              "$id": "#/properties/federation",
              "type": "object",
              "title": "The federation schema",
              "description": "Holds configuration for vendor federation.",
              "examples": [
                {
                  "uri": "https://och.projectvoltron.dev"
                }
              ],
              "required": [
                "uri"
              ],
              "properties": {
                "uri": {
                  "$id": "#/properties/federation/properties/uri",
                  "type": "string",
                  "title": "The uri schema",
                  "description": "The URI of the external OCH.",
                  "default": "",
                  "examples": [
                    "https://och.projectvoltron.dev"
                  ]
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    }
  ]
}
