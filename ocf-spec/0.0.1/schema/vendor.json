{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "description": "Vendor manifests are currently not used. They will be part of the OCH federation feature.",
  "required": [
    "ocfVersion",
    "kind",
    "revision",
    "metadata",
    "spec"
  ],
  "properties": {
    "ocfVersion": {
      "$id": "#/properties/ocfVersion",
      "type": "string",
      "const": "0.0.1"
    },
    "kind": {
      "$id": "#/properties/kind",
      "type": "string",
      "enum": [
        "Vendor"
      ]
    },
    "revision": {
      "$id": "#/properties/revision",
      "type": "string",
      "minLength": 5,
      "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$",
      "description": "Version of the manifest content in the SemVer format."
    },
    "signature": {
      "$id": "#/properties/signature",
      "type": "object",
      "description": "Ensures the authenticity and integrity of a given manifest. CURRENTLY NOT IMPLEMENTED.",
      "required": [
        "och"
      ],
      "properties": {
        "och": {
          "description": "The signature signed with the HUB key.",
          "type": "string"
        }
      }
    },
    "metadata": {
      "$ref": "https://projectvoltron.dev/schemas/common/metadata.json"
    },
    "spec": {
      "$id": "#/properties/spec",
      "type": "object",
      "description": "A container for the Vendor specification definition.",
      "additionalProperties": false,
      "required": [
        "federation"
      ],
      "properties": {
        "federation": {
          "$id": "#/properties/federation",
          "type": "object",
          "description": "Holds configuration for vendor federation.",
          "required": [
            "uri"
          ],
          "properties": {
            "uri": {
              "$id": "#/properties/federation/properties/uri",
              "format": "uri",
              "type": "string",
              "description": "The URI of the external OCH."
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
