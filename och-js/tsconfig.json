{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "src/types"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/types/**/*"
  ]
}
