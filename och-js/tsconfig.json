{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "typeRoots": [
      "src/types"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/types/**/*"
  ]
}
