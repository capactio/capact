{
  "name": "och-js",
  "version": "0.1.0",
  "description": "Component, which stores the OCF manifests and exposes API to access, and manage them",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cleanup": "rm -rf ./dist",
