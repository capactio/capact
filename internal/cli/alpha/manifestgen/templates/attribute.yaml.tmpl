ocfVersion: 0.0.1
revision: {{ .Revision }}
kind: Attribute
metadata:
  prefix: "cap.attribute.{{ .Prefix }}"
  name: "{{ .Name }}"
  displayName: "{{ .Name }}"
  description: "{{ .Name }} attribute"
  {{- if (DerefS .Metadata.DocumentationURL) }}
  documentationURL: {{.Metadata.DocumentationURL}}
  {{- end}}
  {{- if (DerefS .Metadata.SupportURL) }}
  supportURL: {{.Metadata.SupportURL}}
  {{- end}}
  {{- if (DerefS .Metadata.IconURL) }}
  iconURL: {{.Metadata.IconURL}}
  {{- end}}
  {{- if .Metadata.Maintainers }}
  maintainers:
  {{- range .Metadata.Maintainers }}
    - email: {{.Email}}
      name: {{.Name}}
      url: {{.URL}}
  {{- end}}
  {{- end}}
