{
  "name": "hub-js",
  "version": "0.1.0",
  "description": "Component, which stores the OCF manifests and exposes API to access, and manage them",
  "main": "dist/index.js",
  "type": "commonjs",
  "types": "./index.d.ts",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cleanup": "rm -rf ./dist",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,graphql}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,graphql}\"",
    "build": "npm run cleanup && tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "preinstall": "npx npm-force-resolutions"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.8.0",
    "@grpc/grpc-js": "^1.3.1",
    "apollo-server-express": "^3.6.2",
    "express": "^4.17.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^8.1.0",
    "long": "^5.2.0",
    "neo4j-driver": "^4.3.0",
    "neo4j-graphql-js": "~2.19.4",
    "nice-grpc": "^1.0.6",
    "prettier": "^2.5.0",
    "protobufjs": "^6.11.2",
    "unique-names-generator": "^4.7.1",
    "winston": "^3.3.3"
  },
  "resolutions": {
    "ws": "=7.4.6",
    "ansi-regex": "^5.0.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.0",
    "@types/express-serve-static-core": "^4.17.19",
    "@types/node": "^16.4.13",
    "@types/ws": "^7.4.7",
    "eslint": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-force-resolutions": "^0.0.10",
    "prettier": "^2.3.0",
    "typescript": "~4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
